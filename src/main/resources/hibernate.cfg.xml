<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration xmlns="https://hibernate.org/xsd/orm/cfg">
  <session-factory>
    <!-- Database connection settings -->
    <property name="hibernate.connection.driver_class">org.sqlite.JDBC</property>
    <property name="hibernate.connection.url">jdbc:sqlite:virtual_account.db</property>
    <property name="hibernate.dialect">org.hibernate.dialect.SQLiteDialect</property>
    <property name="hibernate.hbm2ddl.auto">update</property>

    <!-- JDBC connection pool (use the built-in) -->
    <property name="hibernate.connection.pool_size">1</property>

    <!-- SQL dialect -->
    <property name="hibernate.dialect">org.hibernate.dialect.SQLiteDialect</property>

    <!-- Echo all executed SQL to stdout -->
    <property name="show_sql">false</property>

    <!-- Drop and re-create the database schema on startup -->
    <property name="hibernate.hbm2ddl.auto">update</property>

    <!-- List of annotated entity classes -->
    <mapping class="org.shadow.domain.model.Balance" />
    <mapping class="org.shadow.domain.model.OrderEntity" />
  </session-factory>
</hibernate-configuration>
